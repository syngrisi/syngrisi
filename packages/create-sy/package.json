{
  "name": "create-sy",
  "displayName": "Syngrisi setup package",
  "version": "2.3.0",
  "description": "Easily install and configure Syngrisi for visual testing.",
  "author": {
    "name": "Viktar Silakou",
    "email": "1105714@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/syngrisi/syngrisi/tree/main/packages/create-sy",
  "repository": {
    "type": "git",
    "url": "git+git@github.com:syngrisi/syngrisi.git",
    "directory": "packages/create-sy"
  },
  "bugs": {
    "url": "https://github.com/syngrisi/syngrisi/issues"
  },
  "keywords": [
    "Syngrisi",
    "create-sy",
    "visual-testing",
    "testing",
    "regression",
    "comparison",
    "screenshoots",
    "automation"
  ],
  "bin": {
    "create-sy": "./bin/sy.js"
  },
  "type": "module",
  "scripts": {
    "build": "run-s clean compile",
    "clean": "rimraf tsconfig.tsbuildinfo ./build ./coverage",
    "compile": "tsc -p ./tsconfig.json",
    "release": "release-it --github.release",
    "release:ci": "npm run release -- --ci --npm.skipChecks --no-git.requireCleanWorkingDir",
    "release:patch": "npm run release -- patch",
    "release:minor": "npm run release -- minor",
    "release:major": "npm run release -- major",
    "test": "run-s build test:*",
    "test:eslint": "eslint -c ./.eslintrc.cjs ./src/**/*.ts ./tests/**/*.ts",
    "test:unit": "vitest run",
    "watch": "npm run compile -- --watch"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.2",
    "@types/inquirer": "^9.0.6",
    "@types/minimist": "^1.2.2",
    "@types/node": "^24.10.1",
    "@types/semver": "^7.3.13",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "@vitest/coverage-v8": "^4.0.8",
    "c8": "^7.12.0",
    "eslint": "^8.52.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-unicorn": "^45.0.2",
    "npm-run-all": "^4.1.5",
    "release-it": "^16.2.1",
    "typescript": "^5.2.2",
    "vite": "^7.2.2",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "cross-spawn": "^7.0.3",
    "inquirer": "^9.1.4",
    "minimist": "^1.2.8",
    "ora": "^6.0.0",
    "read-pkg-up": "^10.1.0",
    "semver": "^7.3.8"
  },
  "gitHead": "df1d7bc159619fcf0e612229be1a79652a84e5e7"
}
