{
  "name": "@syngrisi/e2e",
  "description": "End-to-end Playwright BDD test suite for Syngrisi.",
  "version": "0.0.1",
  "private": true,
  "keywords": [
    "playwright",
    "bdd",
    "e2e",
    "syngrisi"
  ],
  "scripts": {
    "postinstall": "playwright install",
    "bddgen": "bddgen",
    "test": "bddgen && cross-env E2E_HEADLESS=1 playwright test --workers=6",
    "test:smoke": "bddgen && cross-env playwright test --grep=@smoke --retries=1 --workers=3 --shard=${SHARD:-1/1}",
    "test:headed": "bddgen && cross-env PLAYWRIGHT_HEADED=1 playwright test",
    "test:mcp": "cross-env MCP_KEEP_ALIVE=0 E2E_HEADLESS=1 playwright test --workers=1 --config support/mcp/playwright.config.ts support/mcp/mcp.spec.ts",
    "test:mcp:headed": "cross-env MCP_KEEP_ALIVE=1 E2E_HEADLESS=0 playwright test --workers=1 --config support/mcp/playwright.config.ts support/mcp/mcp.spec.ts"
  },
  "devDependencies": {
    "@cucumber/cucumber-expressions": "^18.0.1",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.1",
    "chalk": "^4.1.2",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "envalid": "^8.1.1",
    "playwright-bdd": "^8.4.1",
    "playwright-mcp-advanced": "^0.1.0",
    "typescript": "^5.9.3",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.1",
    "@syngrisi/wdio-sdk": "*",
    "@types/form-data": "^2.5.2",
    "@types/js-yaml": "^4.0.9",
    "@types/winston": "^2.4.4",
    "cheerio": "^1.0.0",
    "domhandler": "^5.0.3",
    "form-data": "^4.0.4",
    "got-cjs": "^12.5.4",
    "hasha": "^7.0.0",
    "js-yaml": "^4.1.1",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "tsx": "^4.20.6",
    "yaml": "^2.8.1"
  },
  "overrides": {
    "playwright": "^1.56.1",
    "tar-fs": "^3.1.1",
    "ws": "^8.18.0"
  }
}